<%
 layout('common/sfcc-layout');
  %>

<span id="subjectTitlesBox">
  <ul class="listToLinks" id="subjectTitles">
   <% for (var i = 0; i < recordOfSubjects.length; i++) { %>
    <li>
     <a href="/coursecatalog/bysubject/<%= recordOfSubjects[i].subject_id %>">
      <%= recordOfSubjects[i].subject %>
     </a>
    </li>
   <% } %>
 </ul>
</span>

<% if (typeof recordOfCourses !== 'undefined') { %>

<span id="coursesInSubjectBox">
   <ul id="coursesInSubject">
 <% for (var k = 0; k < recordOfCourses.length; k++) { %>
 <li>
  <a href="/coursecatalog/bysubject/<%=subjectId%>/coursebyguid/<%= recordOfCourses[k].guid %>">
   <%= recordOfCourses[k].title %>
  </a>
 </li>
 <% } %>
 </ul>
 </span>
<% } %>

<div style="clear:both"></div>

<% if (typeof recordOfCourseInfo !== 'undefined') { %>

<div id="courseQuickInfoBox" class="info-box">
 <div><%- recordOfCourseInfo[0].title %></div>
 <div><%- recordOfCourseInfo[0].guid %></div>
 <div><%- recordOfCourseInfo[0].subtitle %></div>
 <div><%- recordOfCourseInfo[0].description %></div>
</div>

<% } %>

